<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_day"
        android:orientation="vertical"
        android:padding="@dimen/main_padding"
        android:layout_weight="1">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:text="@string/app_name"
            android:textColor="@color/white"
            android:textSize="@dimen/mainText_size"
            android:layout_marginBottom="4dp"/>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingTop="@dimen/main_padding">

        <Button
            android:id="@+id/main_button_search"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:gravity="center"
            android:text="@string/main_search"
            android:textColor="@color/color_text"
            android:textSize="@dimen/mainText_size"
            android:foreground="?attr/selectableItemBackground"
            app:cornerRadius="@dimen/mainCorner_radius"
            app:icon="@drawable/ic_search"
            app:iconGravity="textStart"
            app:iconPadding="@dimen/mainIcon_padding"
            app:iconTint="@color/color_text"/>

        <Button
            android:id="@+id/main_button_media"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:text="@string/main_media"
            android:textSize="@dimen/mainText_size"
            android:textColor="@color/color_text"
            android:foreground="?attr/selectableItemBackground"
            app:cornerRadius="@dimen/mainCorner_radius"
            app:icon="@drawable/ic_media"
            app:iconGravity="textStart"
            app:iconPadding="@dimen/mainIcon_padding"
            app:iconTint="@color/color_text"/>

        <Button
            android:id="@+id/main_button_setting"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:text="@string/main_setting"
            android:textColor="@color/color_text"
            android:foreground="?attr/selectableItemBackground"
            android:textSize="@dimen/mainText_size"
            app:cornerRadius="@dimen/mainCorner_radius"
            app:icon="@drawable/ic_setting"
            app:iconGravity="textStart"
            app:iconPadding="@dimen/mainIcon_padding"
            app:iconTint="@color/color_text"/>

    </LinearLayout>


</LinearLayout>





