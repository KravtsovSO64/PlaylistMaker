<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="61dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/album_cover"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginVertical="@dimen/settingBar_marginTop"
            android:layout_marginStart="@dimen/settingPadding"
            android:layout_marginEnd="@dimen/settingBar_marginTop"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingVertical="14dp"
            android:layout_marginStart="64dp"
            android:layout_marginEnd="40dp">

            <TextView
                android:id="@+id/track_name"
                android:layout_width="match_parent"
                android:layout_height="18dp"
                android:gravity="center_vertical"
                android:textSize="@dimen/settingText_size"
                android:textColor="@color/search_holder_trackName"
                android:fontFamily="@font/ys_display_regular"
                android:maxLines="1"
                android:ellipsize="end" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="14dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/artist_name"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="start"
                    android:fontFamily="@font/ys_display_regular"
                    android:textSize="@dimen/searchText_size"
                    android:textColor="@color/search_holder_artistName"
                    android:maxWidth="56dp"
                    android:maxLines="1"
                    android:ellipsize="end"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginHorizontal="4dp"
                    android:src="@drawable/ic_ellipse"
                    app:tint="@color/setting_icon_color" />
                <TextView
                    android:id="@+id/track_time"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="start"
                    android:fontFamily="@font/ys_display_regular"
                    android:textSize="@dimen/searchText_size"
                    android:textColor="@color/search_holder_artistName"
                    android:maxLines="1"/>


            </LinearLayout>


        </LinearLayout>

        <ImageView style="@style/SettingViewButton"
            android:id="@+id/arrow_track"
            android:layout_width="@dimen/settingIcon_width"
            android:layout_height="@dimen/settingIcon_height"
            android:layout_gravity="end"
            android:layout_marginTop="18dp"
            android:layout_marginEnd="12dp"
            android:paddingVertical="4dp"
            android:paddingHorizontal="8dp"
            android:src="@drawable/ic_arrow"
            app:tint="@color/setting_icon_color"/>

    </FrameLayout>


</LinearLayout>