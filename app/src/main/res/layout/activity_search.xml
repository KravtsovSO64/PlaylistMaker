<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="61dp">

        <ImageView
            android:id="@+id/arrow_back"
            android:layout_width="@dimen/size_arrow_back"
            android:layout_height="@dimen/size_arrow_back"
            android:layout_marginTop="@dimen/settingBar_marginTop"
            android:foreground="?attr/selectableItemBackground"
            android:padding="@dimen/main_padding"
            android:src="@drawable/ic_arrow_back"
            app:tint="@color/setting_header_text" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="@dimen/settingBar_marginTop"
            android:fontFamily="@font/ys_display_medium"
            android:gravity="start"
            android:padding="@dimen/settingBar_marginTop"
            android:text="@string/main_search"
            android:textColor="@color/setting_header_text"
            android:textFontWeight="500"
            android:textSize="@dimen/mainText_size" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="8dp"
        android:background="@drawable/background_search_line"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/editText"
            style="@style/Search_Line"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            android:drawableStart="@drawable/ic_search"
            android:drawablePadding="8dp"
            android:hint="@string/main_search"
            android:imeOptions="actionDone"
            android:inputType="text"
            android:maxLines="1"
            android:singleLine="true" />

        <ImageView
            android:id="@+id/clearIcon"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:foreground="?attr/selectableItemBackground"
            android:padding="@dimen/settingPadding"
            android:src="@drawable/ic_clear_text"
            android:visibility="gone"
            app:tint="@color/search_line_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/hintTextSearch"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginTop="24dp"
            android:gravity="center"
            android:text="@string/hintMessage"
            android:textColor="@color/setting_header_text"
            android:textSize="18sp"
            android:fontFamily="@font/ys_display_medium"
            android:visibility="gone"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/track_list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/settingIcon_marginTop"
            tools:listitem="@layout/track_view"/>


        <ImageView
            android:id="@+id/error_poster"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="210dp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/error_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/ys_display_medium"
            android:gravity="center"
            android:textColor="@color/search_holder_trackName"
            android:textSize="19sp"
            android:visibility="gone"/>

        <Button
            style="@style/MainViewButton"
            android:id="@+id/buttonUpdateSearchMusic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:backgroundTint="@color/setting_header_text"
            android:layout_gravity="center"
            android:layout_marginTop="32dp"
            android:text="@string/buttonUpdateSearch"
            android:textColor="@color/update_button"
            android:textAllCaps="false"
            android:textSize="14sp"
            android:visibility="gone"/>

        <Button
            style="@style/MainViewButton"
            android:id="@+id/buttonClearHistory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:backgroundTint="@color/setting_header_text"
            android:layout_gravity="center"
            android:layout_marginTop="32dp"
            android:text="@string/buttonClearHistory"
            android:textColor="@color/update_button"
            android:textAllCaps="false"
            android:textSize="14sp"
            android:visibility="gone"/>

    </LinearLayout>


</LinearLayout>