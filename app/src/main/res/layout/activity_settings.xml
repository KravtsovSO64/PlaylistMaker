<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="61dp">

       <ImageView
           android:id="@+id/arrow_back"
           android:layout_width="48dp"
           android:layout_height="48dp"
           android:layout_marginTop="@dimen/settingBar_marginTop"
           android:padding="16dp"
           android:src="@drawable/ic_arrow_back"
           android:foreground="?attr/selectableItemBackground"/>

       <TextView
           android:layout_width="208dp"
           android:layout_height="48dp"
           android:gravity="start"
           android:padding="8dp"
           android:layout_marginTop="@dimen/settingBar_marginTop"
           android:text="@string/main_setting"
           android:textColor="@color/color_text"
           android:textSize="@dimen/mainText_size"
           android:textStyle="bold" />


   </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="16dp">

        <FrameLayout
            android:id="@+id/nigth_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:padding="@dimen/main_padding"
                android:text="@string/dark_view"
                android:textColor="@color/color_text"
                android:textSize="@dimen/settingText_size"/>

            <Switch
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:padding="@dimen/main_padding"/>

        </FrameLayout>

        <FrameLayout
            android:id="@+id/share"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:padding="@dimen/main_padding"
                android:text="@string/share_app"
                android:textColor="@color/color_text"
                android:textSize="@dimen/settingText_size"/>

            <ImageView
                android:layout_width="@dimen/settingIcon_width"
                android:layout_height="@dimen/settingIcon_height"
                android:layout_marginTop="@dimen/settingIcon_marginTop"
                android:layout_marginEnd="@dimen/settingIcon_marginEnd"
                android:src="@drawable/ic_share"
                android:layout_gravity="end">
            </ImageView>


        </FrameLayout>

        <FrameLayout
            android:id="@+id/support"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:padding="@dimen/main_padding"
                android:text="@string/write_support"
                android:textColor="@color/color_text"
                android:textSize="@dimen/settingText_size"/>

            <ImageView
                android:layout_width="@dimen/settingIcon_width"
                android:layout_height="@dimen/settingIcon_height"
                android:layout_marginTop="@dimen/settingIcon_marginTop"
                android:layout_marginEnd="@dimen/settingIcon_marginEnd"
                android:layout_gravity="end"
                android:src="@drawable/ic_support"/>


        </FrameLayout>

        <FrameLayout
            android:id="@+id/arrow"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:padding="@dimen/main_padding"
                android:text="@string/user_agreement"
                android:textColor="@color/color_text"
                android:textSize="@dimen/settingText_size"/>


            <ImageView
                android:layout_width="@dimen/settingIcon_width"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="@dimen/settingIcon_marginTop"
                android:layout_marginEnd="@dimen/settingIcon_marginEnd"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"
                android:src="@drawable/ic_arrow" />


        </FrameLayout>

    </LinearLayout>

</LinearLayout>

