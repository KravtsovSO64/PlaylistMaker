<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MainViewButton" parent="Widget.Material3.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@color/main_button_background</item>
        <item name="cornerRadius">@dimen/mainCorner_radius</item>
        <item name="android:textSize">@dimen/mainText_size</item>
        <item name="android:textColor">@color/main_button_color_text</item>
        <item name="textAllCaps">false</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/mainIcon_padding</item>
        <item name="iconTint">@color/main_icon_color</item>


    </style>

    <style name="SettingViewButtonText" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:padding">@dimen/main_padding</item>
        <item name="android:textColor">@color/setting_button_color_text</item>
        <item name="android:textSize">@dimen/settingText_size</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <style name="SettingViewButtonIcon">
        <item name="android:layout_width">@dimen/settingIcon_width</item>
        <item name="android:layout_height">@dimen/settingIcon_height</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:layout_marginTop">@dimen/settingIcon_marginTop</item>
        <item name="android:layout_marginEnd">@dimen/settingIcon_marginEnd</item>
        <item name="android:tint">@color/setting_icon_color</item>
    </style>

    <style name="Search_Line">
        <item name="android:layout_width">328dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textColor">@color/main_button_color_text</item>
        <item name="android:textColorHint">@color/search_line_content</item>
        <item name="android:background">@null</item>
        <item name="android:textCursorDrawable">@drawable/text_cursor</item>
        <item name="android:textSize">@dimen/settingText_size</item>
        <item name="android:drawablePadding">6dp</item>
        <item name="android:drawableTint">@color/search_line_content</item>
        <item name="android:maxLines">1</item>
    </style>




</resources>
