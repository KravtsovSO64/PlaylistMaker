<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MainViewButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:backgroundTint">@color/main_button_background</item>
        <item name="cornerRadius">@dimen/mainCorner_radius</item>
        <item name="android:textSize">@dimen/mainText_size</item>
        <item name="android:textColor">@color/main_button_color_text</item>
        <item name="textAllCaps">false</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/mainIcon_padding</item>
        <item name="iconTint">@color/main_icon_color</item>
    </style>

    <style name="SettingViewButton" >
        <item name="android:textColor">@color/setting_button_color_text</item>
        <item name="android:textSize">@dimen/settingText_size</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>


    <style name="Search_Line">
        <item name="android:textColor">@color/main_button_color_text</item>
        <item name="android:textColorHint">@color/search_line_content</item>
        <item name="android:background">@null</item>
        <item name="android:textCursorDrawable">@drawable/text_cursor</item>
        <item name="android:textSize">@dimen/settingText_size</item>
        <item name="android:drawableTint">@color/search_line_content</item>
    </style>




</resources>
